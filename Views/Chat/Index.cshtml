@model List<ChatMessage>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .container {
            max-width: 600px;
            margin: auto;
        }

        .message-container {
            overflow-y: auto;
            max-height: 400px;
            border: 1px solid #ccc; /* Add border around message container */
            padding: 10px;
            border-radius: 10px;
        }

        .message-bubble {
            border-radius: 20px;
            padding: 10px 15px;
            margin-bottom: 10px;
            max-width: 70%;
        }

        .message-bubble-sent {
            background-color: #DCF8C6;
            float: right;
        }

        .message-bubble-received {
            background-color: #EAEAEA;
            float: left;
        }

        .message-bubble-current-user {
            background-color: #C7F0DB; /* Light green for messages sent by current user */
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="mt-5 mb-4">Chat</h2>
        <div class="message-container" id="messages">
            @foreach (var message in Model)
            {
                <div class="message-bubble @(message.SenderId == "You" ? "message-bubble-sent" : (message.SenderId == User.Identity.Name ? "message-bubble-current-user" : "message-bubble-received"))">
                    <p><strong>@message.SenderId:</strong> @message.Content</p>
                    <span class="small text-muted">@message.SentAt.ToString("HH:mm:ss")</span>
                </div>
            }
        </div>
        <div class="mt-3">
            <div class="row">
                <div class="col">
                    <input type="text" id="messageInput" class="form-control" placeholder="Type a message...">
                </div>
                <div class="col-auto">
                    <button id="sendButton" class="btn btn-primary">Send</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.0/signalr.min.js"></script>
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/chathub")
            .build();

        connection.start().catch(err => console.error(err.toString()));

        document.getElementById("sendButton").addEventListener("click", event => {
            const message = document.getElementById("messageInput").value;
            connection.invoke("SendMessage", message).catch(err => console.error(err.toString()));
            document.getElementById("messageInput").value = ""; // Clear the input field after sending
            event.preventDefault();
        });

        connection.on("ReceiveMessage", (user, message) => {
            const encodedMessage = message.replace(/&/g, "&amp;").replace(/</g, "&lt;").replace(/>/g, "&gt;");
            const isCurrentUser = user === "@User.Identity.Name";
            const bubbleClass = isCurrentUser ? "message-bubble-sent" : "message-bubble-received";
            const li = document.createElement("div");
            li.className = `message-bubble ${bubbleClass} ${isCurrentUser ? "message-bubble-current-user" : ""}`;
            li.innerHTML = `<p><strong>${user}:</strong> ${encodedMessage}</p><span class="small text-muted">${new Date().toLocaleTimeString()}</span>`;
            document.getElementById("messages").appendChild(li);
        });
    </script>
</body>
</html>


