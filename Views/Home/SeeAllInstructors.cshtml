<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Instructors</title>
    <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCWYfj3P5b_LWOBFpk2xx6wqIETq66iC28&callback=initMap"></script>
    <script src="~/maps/map.js"></script>
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>

<body>
    <main>

        <h3 style="text-align: center; padding-top: 20px;">Find instructors near you using the map below. Set your preferences then click "See Instructors".</h3>

        <div class="map-container">
            <div id="map" style="height: 400px;"></div>
        </div>

        <div id="sliderContainer">
            <div class="button-container">
                <button id="userLocationBtn">Find My Location</button>
                <div id="loadingSpinner" style="display: none;"></div>
            </div>
            <div class="slider-label-container">
                <label for="radiusSlider">Adjust Radius:</label>
                <div class="slider-container">
                    <input type="range" id="radiusSlider" min="2" max="20" value="11" step="0.5">
                </div>
                <span id="radiusValue">11.0 km</span>
            </div>
            <div class="button-container">
                <button id="seeInstructorsBtn">See Instructors</button>
            </div>
        </div>

        <section>
            <h2>Instructors</h2>

            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Photo</th>
                        <th>Experience</th>
                        <th>Postcode</th>
                        <th>Rating</th>
                        <th>Contact</th>
                        <th>Lessons</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var instructor in Model)
                    {
                        <tr>
                            <td>@instructor.FirstName @instructor.LastName</td>
                            <td>@instructor.ProfilePicture</td>
                            <td>[Not yet implemented]</td>
                            <td>@instructor.PostCode</td>
                            <td>
                                @if (instructor.TotalRating > 0)
                                {
                                    <div class="star-rating">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= Math.Floor(instructor.TotalRating))
                                            {
                                                <span class="star">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                                                        <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                                                    </svg>
                                                </span> <!-- Filled star -->
                                            }
                                            else if (i == Math.Ceiling(instructor.TotalRating) && instructor.TotalRating % 1 != 0)
                                            {
                                                <span class="star">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-half" viewBox="0 0 16 16">
                                                        <path d="M5.354 5.119 7.538.792A.52.52 0 0 1 8 .5c.183 0 .366.097.465.292l2.184 4.327 4.898.696A.54.54 0 0 1 16 6.32a.55.55 0 0 1-.17.445l-3.523 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256a.5.5 0 0 1-.146.05c-.342.06-.668-.254-.6-.642l.83-4.73L.173 6.765a.55.55 0 0 1-.172-.403.6.6 0 0 1 .085-.302.51.51 0 0 1 .37-.245zM8 12.027a.5.5 0 0 1 .232.056l3.686 1.894-.694-3.957a.56.56 0 0 1 .162-.505l2.907-2.77-4.052-.576a.53.53 0 0 1-.393-.288L8.001 2.223 8 2.226z" />
                                                    </svg>
                                                </span> <!-- Half-filled star -->
                                            }
                                            else
                                            {
                                                <span class="star">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star" viewBox="0 0 16 16">
                                                        <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.56.56 0 0 0-.163-.505L1.71 6.745l4.052-.576a.53.53 0 0 0 .393-.288L8 2.223l1.847 3.658a.53.53 0 0 0 .393.288l4.052.575-2.906 2.77a.56.56 0 0 0-.163.506l.694 3.957-3.686-1.894a.5.5 0 0 0-.461 0z" />
                                                    </svg>
                                                </span> <!-- Empty star -->
                                            }
                                        }
                                        @instructor.TotalRating
                                    </div>
                                }
                                else
                                {
                                    <span>No reviews left yet!</span>
                                }
                            </td>
                            <td>
                                @if (User.Identity.IsAuthenticated && User.IsInRole("Learner"))
                                {
                                    <a class="button" asp-controller="Chat" asp-action="Index" asp-route-id="@instructor.Id">Chat</a>
                                }
                            </td>
                            <td>
                                @if (User.Identity.IsAuthenticated && User.IsInRole("Learner"))
                                {
                                    <a class="button" asp-controller="DrivingClass" asp-action="ShowClassesForThisInstructor" asp-route-instructorId="@instructor.Id">View Lessons</a>
                                }
                            </td>
                            <td>
                                @if (User.Identity.IsAuthenticated && User.IsInRole("Learner"))
                                {
                                    <a class="button" asp-controller="Reviews" asp-action="Create" asp-route-id="@instructor.Id">Write a Review</a>
                                    <a class="button" asp-controller="Reviews" asp-action="ViewReviews" asp-route-id="@instructor.Id">View All Reviews</a>

                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>

    </main>
</body>

</html>