<html lang='en'>
<head>
    <meta charset='utf-8' />
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.js'></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl3 = document.getElementById('calendar3');

            var calendar3 = new FullCalendar.Calendar(calendarEl3, {
                timeZone: 'UTC',
                initialView: 'dayGridWeek',
                // Assuming ViewData["Lessons"] is a JSON array of event objects
                events: @Html.Raw(ViewData["Lessons"]),
                headerToolbar: {
                    left: 'prev,next',
                    center: 'title',
                    right: 'dayGridWeek,dayGridDay'
                },
                editable: true,
                eventClick: function (info) {
                    var drivingClassId = info.event.id;
                    var url = `/Booking/SelectClass/${drivingClassId}`;
                    window.location.href = url;

                    // alert('Event: ' + info.event.title + '\nDescription: ' + (info.event.extendedProps.description || 'No description'));
                },
                firstDay:1
            });

            calendar3.render();
        });
    </script>


</script>
</head>
<body>
    <div id='calendar3'></div>
</body>
</html>