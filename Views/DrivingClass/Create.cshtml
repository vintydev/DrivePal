@model DrivePal.Models.DrivingClass

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>DrivingClass</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DrivingClassStart" class="control-label">Class Starts at</label>
                <input asp-for="DrivingClassStart" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                <span asp-validation-for="DrivingClassStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DrivingClassEnd" class="control-label">Class Ends at</label>
                <input asp-for="DrivingClassEnd" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                <span asp-validation-for="DrivingClassEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
