@model DrivePal.Models.DrivingClass

@{
    ViewData["Title"] = "Create";
}

@{
    var minDate = DateTime.Now.ToString("yyyy-MM-ddTHH:mm");
}

<h4>Create a new Driving class</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DrivingClassStart" class="control-label">Class Starts at</label>
                <input asp-for="DrivingClassStart" class="form-control" type="datetime-local" min="@minDate" />
                <span asp-validation-for="DrivingClassStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DrivingClassEnd" class="control-label">Class Ends at</label>
                <input asp-for="DrivingClassEnd" class="form-control" type="datetime-local" min="@minDate" />
                <span asp-validation-for="DrivingClassEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelector('form').addEventListener('submit', function (e) {
                var startInput = document.getElementById('DrivingClassStart');
                var endInput = document.getElementById('DrivingClassEnd');

                if (startInput && endInput) {
                    var start = new Date(startInput.value);
                    var end = new Date(endInput.value);

                    if (start >= end) {
                        e.preventDefault(); // Prevent form submission
                        alert('The class end time must be later than the start time.');
                    }
                }
            });
        });
    </script>
}
