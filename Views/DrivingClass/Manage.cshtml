@model DrivePal.Models.DrivingClass

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this class?</h3>
<div>
    <h4>DrivingClass</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DrivingClassStart)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DrivingClassStart)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DrivingClassEnd)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DrivingClassEnd)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Learner)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Learner.FirstName)  @Html.DisplayFor(model => model.Learner.LastName)
        </dd>

    </dl>


    <a class="btn btn-danger" onclick="return confirmDelete()" asp-controller="DrivingClass" asp-route-id="@Model.DrivingClassId" asp-action="Delete">Delete</a> |
        <a class="btn btn-success" asp-action="Calendar">Back to List</a>
    
</div>
<script>
    function confirmDelete() {
        var response = confirm("Are you sure you want to delete this lesson?");
        return response; // This will be true if the user clicked "OK", and false if they clicked "Cancel"
    }
</script>