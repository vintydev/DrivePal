@{
}

@model DrivePal.Models.ViewModels.BookingConfirmationViewModel

@{
    ViewData["Title"] = "Booking Confirmation";
}

<h1>Booking Confirmation</h1>

<div class="alert alert-success" role="alert">
    Congratulations @Model.Learner.FirstName, your booking has been successful.
</div>

<!-- You can add more details about the booking below -->
<div>
    <h2>Booking Details</h2>
    <p>Booking Date: @Model.Booking.BookingDate.ToString("MM/dd/yyyy")</p>
    <p>Class Price: @Model.Booking.Price</p>
    <p>Instructor: @Model.Booking.Instructor.LastName</p>
    <!-- Add more booking details as needed -->
</div>
