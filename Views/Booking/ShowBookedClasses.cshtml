@model DrivePal.Models.ViewModels.LearnerBookingsViewModel

@{
    ViewData["Title"] = "Booked Lessons";
}

@{
    ViewData["Title"] = "Your Booked Lessons";
}

<h3>Your Booked Lessons</h3>

@if (Model.Bookings.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Booking ID</th>
                <th>Booking Date</th>
                <th>Price</th>
                <th>Lesson Start</th>
                <th>Lesson End</th>
                <th>Learner</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model.Bookings)
            {
                <tr>
                    <td>@booking.BookingId</td>
                    <td>@booking.BookingDate.ToString("g")</td>
                    <td>@booking.Price</td>
                    <td>@booking.DrivingClassStart.ToString("g")</td>
                    <td>@booking.DrivingClassEnd.ToString("g")</td>
                    <td>@booking.LearnerLastName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>You have no booked lessons.</p>
}