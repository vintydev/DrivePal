@model IEnumerable<DrivePal.Models.Report>

@{
    ViewData["Title"] = "Reported Views";
}

<h1>Reported Reviews (@ViewBag.Count)</h1>


<table class="table">
    <thead>
        <tr>
            <th>
            Report Reason
            </th>
            <th>
              Report Additional Information
            </th>
            <th>
              Date Created
            </th>
         
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReportReason)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReportMessage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
         
            <td>
               
                <a asp-action="ReportDetails" asp-route-id="@item.ReviewId" class="btn btn-danger">Details</a> |
               
            </td>
        </tr>
}
    </tbody>
</table>
