@model IEnumerable<DrivePal.Models.Learner>
@{

}


<h3>All Learners</h3>

<a class="btn btn-primary" asp-controller="StaffArea" asp-action="Index">Back to Home</a>


<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>


           
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
               
                <td>
                  
                    <a class="btn btn-primary" asp-controller="Admin" asp-action="EditUser" asp-route-userId="@user.Id">View Account Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
