@model DrivePal.Models.ViewModels.ReportsViewModel

@{
    ViewData["Title"] = "Details";
}




<div class="container">
    <div class="row">
        <!-- Existing Content on the Left -->
        <div class="col-md-6">
            <div>
                <h1>Review</h1>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                   Review Rating: 
                    </dt>
                    <dd class="col-sm-10">
                        <div class="star-rating">
                            <br />
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= Model.Rating)
                                {
                                    <span class="star filled-star">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                                            <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                                        </svg>
                                    </span>
                                }
                                else
                                {
                                    <span class="star empty-star">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star" viewBox="0 0 16 16">
                                            <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.56.56 0 0 0-.163-.505L1.71 6.745l4.052-.576a.53.53 0 0 0 .393-.288L8 2.223l1.847 3.658a.53.53 0 0 0 .393.288l4.052.575-2.906 2.77a.56.56 0 0 0-.163.506l.694 3.957-3.686-1.894a.5.5 0 0 0-.461 0z" />
                                        </svg>
                                    </span>
                                }
                            }
                        </div>
                    </dd>
                    <dt class="col-sm-2">
                       Review Content:
                    </dt>
                    <dd class="col-sm-10">
                        <br />
                        @Html.DisplayFor(model => model.Review.ReviewMessage)
                    </dd>
                
                    <dt class="col-sm-2">
                        Review Date:
                    </dt>
                   
                    <dd class="col-sm-10">
                        <br />
                        @Html.DisplayFor(model => model.Review.DateCreated)
                    </dd>
                    <dt class="col-sm-2">
                        Instructor Name:
                    </dt>
                    <dd class="col-sm-10">
                        <br />
                        @Html.DisplayFor(model => model.Instructor.FirstName) @Html.DisplayFor(model => model.Instructor.LastName)
                    </dd>
                </dl>
            </div>
        </div>


        <!-- New Form on the Right -->
        <div class="col-md-6">
            <h1>Report Details</h1>
            <hr />
            <form asp-action="Report" id="reviewForm">
                <input type="hidden" asp-for="Review.ReviewId" />
                @Html.HiddenFor(model => model.Review.ReviewId)
               
                <div class="form-group">
                    <label for="exampleSelect">Please select a problem </label>
                    <select class="form-control" id="Reason" name="ReportReason">
                        <option>Absuvie Language</option>
                        <option>False Report</option>
                        <option>Harassment</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="ReportMessage">Additional Information </label>
                    <input type="text" class="form-control" name="ReportMessage" id="exampleInput" placeholder="Any additional information to help should be wrote here.">
                </div>
                <br />
                <button type="submit" class="btn btn-danger">Submit</button>
            </form>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <!-- Existing Content on the Left -->
        <div class="col-md-6">
            <div>
                <h1>Review Details</h1>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">Review Rating:</dt>
                    <dd class="col-sm-8">
                        <div class="star-rating">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= Model.Rating)
                                {
                                    <i class="bi bi-star-fill"></i>
                                }
                                else
                                {
                                    <i class="bi bi-star"></i>
                                }
                            }
                        </div>
                    </dd>
                    <dt class="col-sm-4">Review Content:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Review.ReviewMessage)</dd>
                    <dt class="col-sm-4">Review Date:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Review.DateCreated)</dd>
                    <dt class="col-sm-4">Instructor Name:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Instructor.FirstName) @Html.DisplayFor(model => model.Instructor.LastName)</dd>
                </dl>
            </div>
        </div>

        <!-- Report Details on the Right -->
        <div class="col-md-6">
            <h1>Report Details</h1>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">Report Reason:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ReportReason)</dd>
                <dt class="col-sm-4">Report Message:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ReportMessage)</dd>
            </dl>
        </div>
    </div>
</div>