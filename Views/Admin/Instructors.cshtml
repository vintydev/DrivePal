@model IEnumerable<DrivePal.Models.Instructor>
@{

}
<h1>Main Menu</h1>
<hr />

<h3>All Instructors </h3>


<a class="btn btn-success" asp-controller="Admin" asp-action="Index">Back to Home</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>


            <th>Approved?/th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.isApproved
                </td>
                <td>
                  
                    <a class="btn btn-primary" asp-controller="Admin" asp-action="EditInstructor" asp-route-id="@user.Id">Manage Account Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
