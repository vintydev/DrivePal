@model IEnumerable<DrivePal.Models.Staff>
@{

}
<h1>Main Menu</h1>
<hr />

<h3>ALl Staff Members</h3>

<a class="btn btn-primary" asp-controller="Admin" asp-action="RegisterStaff">Create New Staff Account</a>
<a class="btn btn-success" asp-controller="Admin" asp-action="Learners">All Learners</a>
<a class="btn btn-success" asp-controller="Admin" asp-action="Instructors">All Instructors</a>
<a class="btn btn-success" asp-controller="Admin" asp-action="Bookings">All Bookings</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>


            <th>Type of Employment</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.WorkType</td>
                <td>
                  
                    <a class="btn btn-primary" asp-controller="Admin" asp-action="EditStaff" asp-route-id="@user.Id">Manage Account Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
