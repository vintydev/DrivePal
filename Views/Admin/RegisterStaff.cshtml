
@model DrivePal.Models.ViewModels.RegisterStaffViewModel
@{
    

}
@if (ViewData["Title"] != null)
{
    <h1>@ViewData["Title"]</h1>
}



<div class="row">
    <div class="col-md-4">
        <form id="registerForm"  method="post">
            <h4>Create a new Instructor account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Email">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Password">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="FirstName" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="FirstName">First Name</label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="LastName" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="LastName">Last Name</label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="City" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="City">City</label>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Street" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Street">Street</label>
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="PostCode" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="PostCode">Post Code</label>
                <span asp-validation-for="PostCode" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="DOB" class="form-control" autocomplete="off" aria-required="true" placeholder="dd/mm/yyyy" type="date" />
                <label asp-for="DOB">Date of Birth</label>
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>
                <div class="form-floating mb-3">
                    <select class="form-select" id="Gender" aria-label="Gender" asp-for="Gender" asp-items="@ViewBag.Gender">
                    </select>
                    <label for="Gender">Pick a Gender</label>
                </div>

            <div class="form-floating mb-3">
            <select class="form-select" id="WorkType" aria-label="Work Type" asp-for="WorkType" asp-items="@ViewBag.WorkTypeSelectList">
               
            </select>
            <label for="WorkType">Type of Employment</label>
    </div>


            

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}